<%= javascript_pack_tag 'channels', 'data-turbolinks-track': 'reload' %>

<div id="hero-id" data-hero-id="<%= current_hero.id %>">Hero Id : <%= current_hero.id %> Hero name : <%= current_hero.heroname %></div>
<div id="room-id" data-room-id="<%= @room.id %>">Room Id : <%= @room.id %></div>
<h1>Room <%= @room.name%></h1>

<div class="wrap">
  <%= form_for @message, remote: true do |f| %>
    <%= f.hidden_field :room_id, value: @room.id %>
    <div class="container-left">
      <div class="quote-display" id="quoteDisplay">
        <%= render 'quote', topic: @topic%>
      </div>
      <%= f.text_area :content, class: 'quote-input', 
                                id: 'quoteInput', 
                                type: 'hidden',
                                autofocus: true %>
      <%= f.submit name: 'left_input'%>
    </div>
  <% end %>


  <div class="container-right">
    <div class="quote-display2" id="quoteDisplay2">
      <%= render 'quote', topic: @topic%>
    </div>
    <textarea class="quote-input2" id="quoteInput2" type="hidden" name="message[content]" style="display:none"></textarea>
  </div>
</div>



