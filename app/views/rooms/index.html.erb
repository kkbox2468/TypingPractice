<h1>Rooms list</h1>
<div>
  <ul>
    <li>
      <%= link_to "新增聊天室", rooms_path, method: "POST" %>
    </li>
  </ul>
</div>

<div>
<%= form_for @rooms do |f|%>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :description %>
<%= f.text_field :description %>
<%= f.submit %>

<% end %>
</div>


<table>
  <thead>
    <th>Room</th>
    <th>Description</th>
    <th>Edit</th>
    <th>Delete</th>
  </thead>
  <% @rooms_list.each do |room|%>
  <tbody>
    <td><%= link_to room.name, room_path(room.id) %></td>
    <td><%= room.description %></td>
    <td><%= link_to "編輯", edit_room_path(room.id) %></td>
    <td><%= link_to "刪除", room_path(room.id), method: "DELETE" %></td>
  </tbody>
  <% end %>
</table>